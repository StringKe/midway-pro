{
  "extends": "./node_modules/mwts/",
  "ignorePatterns": [
    "node_modules",
    "dist",
    "test",
    "jest.config.js",
    "typings"
  ],
  "plugins": [
    "decorator-position"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "decorator-position/decorator-position": [
      "error",
      {
        "printWidth": 80,
        "properties": "above",
        "methods": "above"
      }
    ]
  }
}
